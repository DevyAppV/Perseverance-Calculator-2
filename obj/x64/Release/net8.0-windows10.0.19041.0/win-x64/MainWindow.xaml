                                </Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Margin" Value="3"></Setter>
                                </Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="8"></Setter>
                                </Style>
                            </ResourceDictionary>
                        </StackPanel.Resources>
